{
  "name": "sauce-demo-playwright",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "npx playwright test",
    "test:ui": "npx playwright test --ui",
    "test:debug": "npx playwright test --debug",
    "test:headed": "npx playwright test --headed",
    "test:report": "npx playwright show-report",
    "allure:generate": "npx allure generate ./allure-results --clean",
    "allure:open": "npx allure open allure-report",
    "allure:serve": "npx allure serve ./allure-results",
    "allure:clear": "Remove-Item -Recurse -Force ./allure-results, ./allure-report -ErrorAction SilentlyContinue",
    "test:allure": "npx playwright test && npm run allure:generate && npm run allure:open",
    "test:login:allure": "npx playwright test tests/login.spec.ts && npm run allure:generate && npm run allure:open",
    "build": "tsc",
    "start": "tsx src/function_test.ts",
    "dev": "tsx --watch src/function_test.ts",
    "lint": "eslint . --ext .ts",
    "lint:fix": "eslint . --ext .ts --fix",
    "lint:check": "eslint --print-config .eslintrc.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.14.0",
  "devDependencies": {
    "@eslint/js": "^9.32.0",
    "@playwright/test": "^1.54.2",
    "@types/node": "^24.1.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "allure-playwright": "^3.3.2",
    "eslint": "^9.32.0",
    "eslint-plugin-playwright": "^2.2.2",
    "typescript": "^5.9.2"
  }
}
